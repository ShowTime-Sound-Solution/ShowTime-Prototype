<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:project.Components"
             x:Class="project.Components.ReverbButton">
    <Panel Height="87" Width="87">
        <components:Button x:Name="ReverbButtonRotate" RenderTransformOrigin="43.5, 43.5">
            <components:Button.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="-90"/>
                </TransformGroup>
            </components:Button.RenderTransform>
        </components:Button>
    </Panel>
</UserControl>