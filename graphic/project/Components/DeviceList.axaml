<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:project.Components"
        xmlns:project="clr-namespace:project"
        x:Class="project.Components.DeviceList"
        x:DataType="components:DeviceList">
        <Grid>
                <Grid.RowDefinitions>
                        <RowDefinition Height="10*" />
                        <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <DataGrid Grid.Row="0" Name="DeviceGrid" AutoGenerateColumns="True" HeadersVisibility="None" SelectionChanged="DeviceGrid_OnSelectionChanged">
                </DataGrid>
                <Button Grid.Row="1" Click="RefreshButton_OnClick">
                        <TextBlock Text="Refresh"></TextBlock>
                </Button>
        </Grid>
</UserControl>